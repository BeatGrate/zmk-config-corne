#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
       combos {
                compatible = "zmk,combos";
                combo_esc {
                    timeout-ms = <50>;
                    key-positions = <19 20>;
                    bindings = <&kp ESC>;
                };
       };

        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// | TAB   |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSLH |
// | CTRL  |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  | SQT  |
// | SHFT  |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | GRAVE |
//                   | GUI | L1 | BSPC |   | SPC | L2 and ENT  | LSFT |
                        bindings = <
   &kp TAB   &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSLH
   &kp LCTRL &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp GRAVE
                &kp LGUI &kp 1 &kp BSPC    &kp SPACE &lt 2 ENT &kp LSHIFT
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $   |  %   |   |  ^   |  &   |  *  |  (   |  )  | TRANS |
// |  ALT |     |     |     |      |      |   |      |      |     |      |TRANS| TRANS |
// | SHFT |     |  ~  |  `  | LBRC | LCBR |   | RCBR | RBRC |     |  LT  |  GT |       |
//                   | CTRL | ENT | TAB |   | BSPC | SPC | LSFT |
                        bindings = <
   &trans  &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT &kp CARET &kp AMPS &kp ASTRK &kp LPAR &kp RPAR &kp BSPC
   &trans &kp N1 &kp N2 &kp N3 &kp N4 &kp N5 &kp N6 &kp N7 &kp N8 &kp N9 &kp N0 &kp BSLH
   &trans  &none &kp TILDE2 &kp GRAVE &kp LBKT &kp LBRC &kp RBKT &kp RBRC &trans &trans &trans &trans
                &trans     &trans   &trans      &trans  &trans   &kp COLON
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  TAB | DEL  |     |  _  |    +   | PGUP |   | BT_CLR | BT_NXT | BT_PRV |  BSLS | PIPE |  DEL   |
// | CTRL | HOME | END |  -  |    =   | PGDN |   | LEFT   | DOWN   | UP     | RIGHT | APP  |  PIPE  |
// | SHFT | ALT  | DEL | COPY | PASTE | SEMI |   | PP     | MPREV  | MNEXT  | VOL-  | VOL+ |  GRAVE |
//                     | CTRL | ENT | TAB |   | BSPC | SPC | LSFT |
                        bindings = <
   &trans &kp DEL &none &kp UNDER &kp PLUS &kp PG_UP   &bt BT_CLR  &bt BT_NXT &bt BT_PRV &kp BSLH &kp PIPE &trans
   &trans &kp HOME &kp END &kp MINUS  &kp EQUAL   &kp PG_DN      &kp LEFT &kp DOWN &kp UP  &kp RIGHT &kp K_APP &kp PIPE
   &trans &kp LALT &kp DEL &kp K_COPY  &kp K_PASTE   &kp SEMI      &kp C_PP &kp C_PREV  &kp C_NEXT  &kp C_VOL_DN &kp C_VOL_UP &trans
                             &mt LCTRL ESC  &trans  &none   &trans   &trans    &trans
                        >;
                };
        };
};